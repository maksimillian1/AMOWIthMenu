<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.paimon.stillnotdone.LaboratoryWork3.FragmentLaboratoryWorkThird">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="330dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_shape"
        android:fadingEdge="vertical"
        android:stretchColumns="1"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:padding="3dip"
                android:text="Variant" />

            <TextView
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight=".15"
                android:layout_width="0dp"
                android:padding="3dip"
                android:text="24" />



        </TableRow>

        <TableRow
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="25dp"
            android:layout_width="match_parent">

            <TextView
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:padding="3dip"
                android:text="Function" />

            <TextView
                android:id="@+id/Xi0"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight=".15"
                android:layout_width="0dp"
                android:padding="3dip"
                android:text="e^x-2*sin(x)" />



        </TableRow>

        <TableRow
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="25dp"
            android:layout_width="match_parent">


            <TextView
                android:id="@+id/Yi1"
                android:textColor="#000000"
                android:layout_weight=".25"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:padding="3dip"
                android:text="Edges" />

            <TextView
                android:id="@+id/Yi2"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight=".15"
                android:layout_width="0dp"
                android:padding="3dip"
                android:text="[0,2]" />

        </TableRow>

        <TableRow
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="25dp"
            android:layout_width="match_parent">


            <TextView
                android:textColor="#000000"
                android:layout_weight=".25"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:padding="3dip"
                android:text="Formula" />

            <TextView
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight=".15"
                android:layout_width="0dp"
                android:padding="3dip"
                android:text="1.8" />

        </TableRow>

    </TableLayout>


    <Button
        android:id="@+id/func"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_marginTop="28dp"
        android:text="Графики вихiдной та iнтерпольованой ф-цiй" />

    <Button
        android:id="@+id/mistake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/func"
        android:layout_below="@+id/func"
        android:textSize="12sp"
        android:layout_marginTop="37dp"
        android:text="Похибки iнтерполяцiй у невузлових точках" />


</RelativeLayout>

